@model OrionCoreCableColor.Models.Ticket.TicketInformacionViewModel
<style>


    .img-container {
        width: 100%;
        height: 220px;
        background-image: repeating-linear-gradient(45deg,#ccc,#ccc 10px, #dbdbdb 10px, #dbdbdb 20px);
        text-align: center;
    }

        .img-container::before {
            content: "\f03e";
            font-family: "Font Awesome 5 Pro";
            font-size: 150px;
            opacity: 0.3;
        }
</style>

<div class="modal-header bg-primary-600 bg-primary-gradient">
    <h2 class="modal-title text-white">

        <text>Detalle Incidente</text>

    </h2>

    <button type="button" class="close" data-dismiss="modal">
        <i class="fal fa-times-circle fa-fw fa-lg"></i>
    </button>
</div>

<div class="modal-body">
    <div class="row">
        <div class="col-lg-12">
            <div class="row">

                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-lg-12 col-12 col-sm-12 col-md-12">
                            <br />
                            <div class="col-lg-12 col-sm-12 col-md-12 col-xl-12">
                                <div class="form-group text-center">
                                    <div class="input-group mar-btm ">
                                        <a class="btn btn-@Model.fcClaseColor text-white col-lg-12 col-md-12"> <b>@Model.fcDescripcionEstado</b> </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="row">
                        <div class="col-lg-12 col-12 col-sm-12 col-md-12">
                            <br />
                            <div class="col-lg-12 col-sm-12 col-md-12 col-xl-12">
                                <div class="form-group">
                                    <label class="control-label font-12">Titulo</label>
                                    <div class="input-group mar-btm">
                                        @Html.EditorFor(model => model.fcTituloRequerimiento, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="row">
                        <div class="col-lg-12 col-12 col-sm-12 col-md-12">
                            <br />
                            <div class="col-lg-12 col-sm-12 col-md-12 col-xl-12">
                                <div class="form-group">
                                    <label class="control-label font-12">Descripcion</label>
                                    <div class="input-group mar-btm">
                                        @Html.EditorFor(model => model.fcDescripcionRequerimiento, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="row">
                        <div class="col-lg-12 col-12 col-sm-12 col-md-12">
                            <br />
                            <div class="col-lg-12 col-sm-12 col-md-12 col-xl-12">
                                <div class="form-group">
                                    <label class="control-label font-12">Usuario Solicitante</label>
                                    <div class="input-group mar-btm">
                                        @Html.EditorFor(model => model.fcNombreUsuarioSolicitante, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="row">
                        <div class="col-lg-12 col-12 col-sm-12 col-md-12">
                            <br />
                            <div class="col-lg-12 col-sm-12 col-md-12 col-xl-12">
                                <div class="form-group">
                                    <label class="control-label font-12">Tipo Categoria</label>
                                    <div class="input-group mar-btm">
                                        @Html.EditorFor(model => model.fcDescripcionCategoria, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="row">
                        <div class="col-lg-12 col-12 col-sm-12 col-md-12">
                            <br />
                            <div class="col-lg-12 col-sm-12 col-md-12 col-xl-12">
                                <div class="form-group">
                                    <label class="control-label font-12">Tipo Sub Categoria</label>
                                    <div class="input-group mar-btm">
                                        @Html.EditorFor(model => model.fcTipoRequerimiento, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @if (Model.fcDescripcionEstado == "Resuelto" || Model.fcDescripcionEstado == "Pausado" || Model.fcDescripcionEstado == "Cancelado")
                {
                    <div class="col-lg-4">
                        <div class="row">
                            <div class="col-lg-12 col-12 col-sm-12 col-md-12">
                                <br />
                                <div class="col-lg-12 col-sm-12 col-md-12 col-xl-12">
                                    <div class="form-group">
                                        @if (Model.fcDescripcionEstado == "Resuelto" )
                                        {
                                            <label class="control-label font-12">Tipo Solucion</label>
                                        }
                                        @if (Model.fcDescripcionEstado == "Pausado")
                                        {
                                            <label class="control-label font-12">Motivo de Pausado</label>
                                        }
                                        @if (Model.fcDescripcionEstado == "Cancelado")
                                        {
                                            <label class="control-label font-12">Motivo de Cancelado</label>
                                        }
                                        <div class="input-group mar-btm">
                                            @Html.EditorFor(model => model.fcNombreMotivo, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                @if (Model.fcDescripcionEstado == "Resuelto")
                {
                    <div class="col-lg-4">
                        <div class="row">
                            <div class="col-lg-12 col-12 col-sm-12 col-md-12">
                                <br />
                                <div class="col-lg-12 col-sm-12 col-md-12 col-xl-12">
                                    <div class="form-group">
                                        <label class="control-label font-12">Categoria Resolucion</label>
                                        <div class="input-group mar-btm">
                                            @Html.EditorFor(model => model.fcDescripcionCategoriaResolucion, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="row">
                            <div class="col-lg-12 col-12 col-sm-12 col-md-12">
                                <br />
                                <div class="col-lg-12 col-sm-12 col-md-12 col-xl-12">
                                    <div class="form-group">
                                        <label class="control-label font-12">SubCategoria Resolucion</label>
                                        <div class="input-group mar-btm">
                                            @Html.EditorFor(model => model.fcDescripcionSubCategoriaResolucion, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }


                <div class="col-lg-6">
                    <div class="row">
                        <div class="col-lg-12 col-12 col-sm-12 col-md-12">
                            <br />
                            <div class="col-lg-12 col-sm-12 col-md-12 col-xl-12">
                                <div class="form-group">
                                    <label class="control-label font-12">Fecha Creacion</label>
                                    <div class="input-group mar-btm">
                                        @Html.EditorFor(model => model.fdFechaCreacion, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="row">
                        <div class="col-lg-12 col-12 col-sm-12 col-md-12">
                            <br />
                            <div class="col-lg-12 col-sm-12 col-md-12 col-xl-12">
                                <div class="form-group">
                                    <label class="control-label font-12">Alarma Deteccion</label>
                                    <div class="input-group mar-btm">
                                        @Html.EditorFor(model => model.fdFechaAlarmaDeteccion, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="row">
                        <div class="col-lg-12 col-12 col-sm-12 col-md-12">
                            <br />
                            <div class="col-lg-12 col-sm-12 col-md-12 col-xl-12">
                                <div class="form-group">
                                    <label class="control-label font-12">Urgencia</label>
                                    <div class="input-group mar-btm">
                                        @Html.EditorFor(model => model.fcDescripcionUrgencia, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="row">
                        <div class="col-lg-12 col-12 col-sm-12 col-md-12">
                            <br />
                            <div class="col-lg-12 col-sm-12 col-md-12 col-xl-12">
                                <div class="form-group">
                                    <label class="control-label font-12">Impacto</label>
                                    <div class="input-group mar-btm">
                                        @Html.EditorFor(model => model.fcDescripcionImpacto, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="row">
                        <div class="col-lg-12 col-12 col-sm-12 col-md-12">
                            <br />
                            <div class="col-lg-12 col-sm-12 col-md-12 col-xl-12">
                                <div class="form-group">
                                    <label class="control-label font-12">Prioridad</label>
                                    <div class="input-group mar-btm">
                                        @Html.EditorFor(model => model.fcDescripcionPrioridad, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="row">
                        <div class="col-lg-12 col-12 col-sm-12 col-md-12">
                            <br />
                            <div class="col-lg-12 col-sm-12 col-md-12 col-xl-12">
                                <div class="form-group">
                                    <label class="control-label font-12">Plataforma</label>
                                    <div class="input-group mar-btm">
                                        @Html.EditorFor(model => model.fcPlataforma, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                @*<div class="col-lg-6">
                        <div class="row">
                            <div class="col-lg-12 col-12 col-sm-12 col-md-12">
                                <br />
                                <div class="col-lg-12 col-sm-12 col-md-12 col-xl-12">
                                    <div class="form-group">
                                        <label class="control-label font-12">Servicio Afectado</label>
                                        <div class="input-group mar-btm">
                                            @Html.EditorFor(model => model.fcServicioAfectados, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>*@


            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="row">

                <div class="col-lg-4">
                    <div class="row">
                        <div class="col-lg-12 col-12 col-sm-12 col-md-12">
                            <br />
                            <div class="col-lg-12 col-sm-12 col-md-12 col-xl-12">
                                <table class="table table-bordered table-hover table-striped w-100 dataTable dtr-inline" style="width:100%;" id="TablaServicios">
                                    <thead>
                                        <tr>
                                            <th>Servicios Afectados</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in @ViewBag.ServiciosAfectados)
                                        {
                                            <tr>
                                                <td>@item.fcNombreServicio</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-8">
                    <div class="row">
                        <div class="col-lg-12 col-12 col-sm-12 col-md-12">
                            <br />
                            <div class="col-lg-12 col-sm-12 col-md-12 col-xl-12">
                                <table class="table table-bordered table-hover table-striped w-100 dataTable dtr-inline" style="width:100%;" id="TablaCI">
                                    <thead>
                                        <tr>
                                            <th>CI</th>

                                            <th>Pais</th>
                                            <th>Region</th>
                                            <th>Ciudad</th>
                                            <th>Latitud</th>
                                            <th>Longitud</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in @ViewBag.CI)
                                        {
                                        <tr>
                                            <td>@item.fcConfiguracion</td>
                                            <td>@item.fcPais</td>
                                            <td>@item.fcRegion</td>
                                            <td>@item.fcCiudad</td>
                                            <td>@item.fcLatitud</td>
                                            <td>@item.fcLongitud</td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="row">

                <div class="col-lg-6">
                    <div class="row">
                        <div class="col-lg-12 col-12 col-sm-12 col-md-12">
                            <br />
                            <div class="col-lg-12 col-sm-12 col-md-12 col-xl-12">
                                <div class="form-group">
                                    <label class="control-label font-12">Imagenes Adjuntos</label>
                                    <div class="input-group mar-btm">
                                        @foreach (var item in @ViewBag.DatosDocumentoListado)
                                        {
                                            if (item.fcTipoArchivo == "pdf")
                                            {
                                                <a href="javascript:ShowBigPdf('@item.fcNombreArchivo','@item.fcURL')" class="text-info"> <i class="fal fa-2x fa-file-pdf"> </i> @item.fcNombreArchivo</a>
                                            }
                                            else
                                            {
                                                <a href="javascript:void(0)" data-Description="@item.fcNombreArchivo" class="text-info" onclick="ShowBigImage(this)" src="@item.fcURL"> <i class="fal fa-2x fa-file-image"> </i>  @item.fcNombreArchivo</a>
                                            }
                                        }

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>

</div>