        function actualizarHora() {
            var ahora = new Date();
            var opcionesFecha = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
            var fechaActual = ahora.toLocaleDateString('es-ES', opcionesFecha);

            var opcionesHora = { hour: '2-digit', minute: '2-digit', hour12: true };
            var horaActual = ahora.toLocaleTimeString('es-ES', opcionesHora);

            $("#fecha").text(fechaActual);
            $("#hora").text(horaActual);
        }

        function generarTabsUltimosMeses() {
            var hoy = new Date();
            var tabList = $("#myTab");

            for (var i = 0; i < 6; i++) {
                var mes = new Date(hoy.getFullYear(), hoy.getMonth() - i, 1);
                var mesNombre = mes.toLocaleString('es-ES', { month: 'long', year: 'numeric' });
                var mesId = mes.getMonth() + 1;

                var tabId = `tab${mesId}`;

                tabList.append(`
            <li class="nav-item" role="presentation">
                <button id="${tabId}-btn" value="${mesId}" class="nav-link m-1" type="button" style="background-color: transparent; color: white; border-radius: 10px; border: 1px solid #ffffff47;">${mesNombre}</button>
            </li>
        `);
            }

            // Manejar el evento de clic usando delegación de eventos
            tabList.on('click', '.nav-link', function () {
                var tabId = $(this).attr('value');
                cambiotab(tabId);
            });

            // Llamar a cambiotab para el mes actual después de agregar las pestañas
            var mesActual = hoy.getMonth() + 1;
            cambiotab(mesActual);
        }


      function cambiotab(tabId) {
        $.ajax({
            url: "@Url.Action("Tabs", "Dashboard")",
            method: "post",
            data: { mes: tabId },
            success: function (response) {
                console.log(response);

                var tabContent = $("#myTabContent");
                var tabContenthoras = $("#myTabContenthoras");

                var mesNombre = new Date(new Date().getFullYear(), tabId - 1, 1).toLocaleString('es-ES', { month: 'long'});

                var tiempoAcumulado = response.length > 0 ? response[0].fiTiempoAcumulado : 0;
                var mes = response.length > 0 ? response[0].fcMes : mesNombre;

                tabContent.empty();
                tabContenthoras.empty();

                tabContent.append(`
                        <label class="tab-pane fade show active" id="${tabId} content" role="tabpanel">
                           ${tiempoAcumulado}
                        </label>
                    `);

                tabContenthoras.append(`
                        <label class="tab-pane fade show active" id="${tabId} contenthora" role="tabpanel">
                          Horas en ${mes}
                        </label>
                    `);
            },
            error: function (resp) {
                console.error("Error:", resp);
            }
        });
    }



