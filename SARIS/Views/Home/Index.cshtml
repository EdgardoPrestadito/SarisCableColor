        }





        function graficaTicketRegiones(datos) {
            if (chartTicketRegiones) {
                chartTicketRegiones.destroy();
            }

            if (!Array.isArray(datos) || datos.length === 0) {
                console.error("Datos inválidos o vacíos para la gráfica.");
                return;
            }

            var labels = [];
            var valores = [];
            var colores = ["#FF0000", "#f1b108", "#35cd00", "#007bff", "#6c757d", "#17a2b8", "#e83e8c"];

            for (var i = 0; i < datos.length; i++) {
                if (!datos[i].fcRegion || typeof datos[i].fiTotalRequerimientos !== "number") continue;
                labels.push(datos[i].fcRegion);
                valores.push(datos[i].fiTotalRequerimientos);
            }

            var coloresAplicados = [];
            for (var i = 0; i < valores.length; i++) {
                coloresAplicados.push(colores[i % colores.length]);
            }

            var options = {
                series: valores,
                chart: {
                    width: '100%',
                    height: '100%',
                    type: 'pie'
                },
                labels: labels,
                colors: coloresAplicados,
                responsive: [{
                    breakpoint: 480,
                    options: {
                        legend: { position: 'bottom' }
                    }
                }]
            };

            chartTicketRegiones = new ApexCharts(document.querySelector("#chartRegiones"), options);
            chartTicketRegiones.render();
        }

        function graficaHoras(datos) {
            if (chartHoras) {
                chartHoras.destroy();
            }

            var labels = datos.map(d => d.fcArea);
            var valores = [];

            for (var x = 0; x < 4; x++) {
                var infoData = [];
                for (var i = 0; i < datos.length; i++) {
                    if (x === 0) infoData.push(datos[i].fiCreado);
                    if (x === 1) infoData.push(datos[i].fiEnproceso);
                    if (x === 2) infoData.push(datos[i].fiResuelto);
                    if (x === 3) infoData.push(datos[i].fiPausado);
                }
                let name = ["Creado", "En proceso", "Resuelto", "Pausado"][x];
                valores.push({ name, data: infoData });
            }

            var options = {
                series: valores,
                chart: {
                    type: 'bar',
                    height: 350,
                    stacked: true
                },
                colors: ['#FF0000', '#f1b108', '#35cd00', '#808080'],
                plotOptions: {
                    bar: {
                        horizontal: true,
                        dataLabels: {
                            total: {
                                enabled: true,
                                offsetX: 0,
                                style: { fontSize: '13px', fontWeight: 900 }
                            }
                        }
                    }
                },
                stroke: { width: 1, colors: ['#fff'] },
                xaxis: { categories: labels },
                yaxis: { title: { text: undefined } },
                tooltip: {
                    y: { formatter: val => val }
                },
                fill: { opacity: 1 },
                legend: { position: 'top', horizontalAlign: 'left', offsetX: 40 }
            };

            chartHoras = new ApexCharts(document.querySelector("#chartHoras"), options);
            chartHoras.render();
        }


