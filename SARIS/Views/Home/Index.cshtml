        function graficaTicketArea(datos) {
            var labels = [];
            var valores = [];
            var colores = ["#FF0000", "#f1b108", "#35cd00", "#007bff", "#6c757d", "#17a2b8", "#e83e8c"]; // Colores predeterminados adicionales

            // Extraer etiquetas y valores
            for (var i = 0; i < datos.length; i++) {
                labels.push(datos[i].fcAreaAsignada);
                valores.push(datos[i].fiIDIncidentes);

                // Asignar colores específicos sin repetir los primeros tres
                if (i >= colores.length) {
                    console.warn(`No hay suficientes colores predeterminados para el índice ${i}. Agrega más colores si es necesario.`);
                    colores.push("#" + Math.floor(Math.random() * 16777215).toString(16)); // Generar color si se exceden los definidos
                }
            }

            console.log(valores);
            console.log(colores);

            var optionsTicketArea = {
                series: valores,
                chart: {
                    width: '100%',
                    height: '100%',
                    type: 'pie',
                },
                labels: labels,
                colors: colores.slice(0, valores.length), // Asignar solo los colores necesarios
                responsive: [{
                    breakpoint: 480,
                    options: {
                        legend: {
                            position: 'bottom',
                        }
                    }
                }]
            };

            var chartTicketArea = new ApexCharts(document.querySelector("#chartTicketArea"), optionsTicketArea);
            chartTicketArea.render();
        }
        function graficaTicketRegiones(datos) {
            if (!Array.isArray(datos) || datos.length === 0) {
                console.error("Datos inválidos o vacíos para la gráfica.");
                return;
            }

            var labels = [];
            var valores = [];
            var colores = ["#FF0000", "#f1b108", "#35cd00", "#007bff", "#6c757d", "#17a2b8", "#e83e8c"]; // Colores predeterminados

            // Extraer etiquetas y valores
            for (var i = 0; i < datos.length; i++) {
                if (!datos[i].fcRegion || typeof datos[i].fiTotalRequerimientos !== "number") {
                    console.warn(`Datos faltantes o incorrectos en el índice ${i}:`, datos[i]);
                    continue;
                }
                labels.push(datos[i].fcRegion);
                valores.push(datos[i].fiTotalRequerimientos);
