        function generarTabsUltimosMeses() {
            var hoy = new Date();
            var tabList = $("#myTab");

            for (var i = 0; i < 6; i++) {
                var mes = new Date(hoy.getFullYear(), hoy.getMonth() - i, 1);
                var mesNombre = mes.toLocaleString('es-ES', { month: 'long', year: 'numeric' });
                var mesId = mes.getMonth() + 1;

                var tabId = `tab${mesId}`;

                tabList.append(`
            <li class="nav-item" role="presentation">
                <button id="${tabId}-btn" value="${mesId}" class="nav-link m-1" type="button" style="background-color: transparent; color: white; border-radius: 10px; border: 1px solid #ffffff47;">${mesNombre}</button>
            </li>
        `);
            }

            // Manejar el evento de clic usando delegación de eventos
            tabList.on('click', '.nav-link', function () {
                var tabId = $(this).attr('value');
                cambiotab(tabId);
            });

            // Llamar a cambiotab para el mes actual después de agregar las pestañas
            var mesActual = hoy.getMonth() + 1;
            cambiotab(mesActual);
